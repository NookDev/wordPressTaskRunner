    "server-sync": "browser-sync start --proxy http://mini_excavator.dev --files \"/*.php, assets/scripts/*.js, assets/php/*.php, assets/functions/*.php, assets/styles/*.css, assets/images, !node_modules\" ",
    "build:css": "npm run autoprefixer && npm run concat",
    "build:js": "npm run concat && npm run minify-js",
    "build:images": "npm run minify-images && npm run minify-icons",
    "build:site": "npm run build:*",
    "watch:css": "onchange \"assets/styles\" -- npm run build:css",
